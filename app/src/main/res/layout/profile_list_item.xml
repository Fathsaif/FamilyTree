<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/dummy_img_user"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="@dimen/default_24"
        android:layout_marginTop="@dimen/default_16"
        android:id="@+id/profile_image"
        />

    <com.saif.familytree.core.customuicomonents.CustomTextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_24"
        android:textSize="@dimen/default_24"
        android:text="فتح سيف"
        app:layout_constraintRight_toLeftOf="@+id/profile_image"
        app:layout_constraintBottom_toBottomOf="@+id/profile_image"
        app:layout_constraintTop_toTopOf="@+id/profile_image"
        />

</android.support.constraint.ConstraintLayout>